<UserControl x:Class="SourceAFIS.Visualization.BlockMaskBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:SourceAFIS.Visualization"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="BlockMaskBorderControl">
    <v:MaskBorder DataContext="{Binding ElementName=BlockMaskBorderControl}" Mask="{Binding Scaled}" Inverted="{Binding Inverted}" />
</UserControl>
